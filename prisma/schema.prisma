generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cat {
  id       Int    @id @default(autoincrement())
  name     String @unique
  breed    String 
  friend   Boolean @default(false)
  facilities Facility[]
  @@map("cats")
}

model Facility {
  id       Int    @id @default(autoincrement())
  name     String @unique
  employee Cat @relation(fields: [employeeId], references: [id])
  employeeId    Int
  Dish     Dish[]
  @@map("facilities")
}

model Dish {
  id       Int    @id @default(autoincrement())
  name     String @unique
  genre    String
  facility Facility @relation(fields:[facilityId],references:[id])
  facilityId Int
  @@map("dishes")
}

